<%= render 'shared/errors',obj: apply %>


  <div class="  row ">
  <div class="col-sm-10 col-md-offset-2">
     <%= form_for(apply,:html =>{class:"form-horizontal",multipart: true ,role:"form"}) do |f| %>
       <div class="form-group" >
          <div class="control-label col-sm-2">
           <%=  f.label :job_id,"jobs"%>
          </div>
           <div class="col-sm-5">
                <%=f.grouped_collection_select :job_id,Company.order(:compName),:jobs,:compName,:id,:name,include_blank:true %>
           </div>
      </div>
      <div class="form-group" >
          <div class="control-label col-sm-2">
           <%=  f.label :name,"Apply" %>
          </div>
           <div class="col-sm-5">
             <%= f.text_field :name ,placeholder:"Enter Yes or No",class:"form-control",autofocus:true %>
          </div>
      </div>
      <div class="form-group">
       <div class="col-sm-5 col-sm-offset-2">
        <%= f.submit "Submit" , class:'btn btn-primary btn-md'%>
      </div>
     </div>
<% end %>
</div>
</div>


