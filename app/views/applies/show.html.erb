<div class="container-fluid">
 <div class="card well">
  <div class="card-header" style="color:#269ABC">
   <h4> <strong>Apllied Details</strong></h4>
  </div>
  <div class="card-block">
  <table class="table table-hover table-bordered info">
  <thead style="background-color:#0072CC;color:white">
    <tr class="text-nowrap">
      <th>Name</th>
      <th>RegistrationNo</th>
      <th>Dob</th>
      <th>Branch</th>
      <th>Cgpa</th>
      <th>Contact</th>
      <th>Email</th>
       <th>CompnayName</th>
       <th>JobName</th>
      <th>Package</th>
      <th>Location</th>
      <th>Critria</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
  <tr>
        <td><%= @apply.student.studentName if @apply.student%></td>
        <td><%= @apply.student.registration if @apply.student%></td>
        <td><%= @apply.student.Dob if @apply.student%></td>
        <td><%= @apply.student.branch if @apply.student%></td>
        <td><%= @apply.student.cgpa if @apply.student%></td>
        <td><%= @apply.student.contact if @apply.student%></td>
        <td><%= @apply.student.email if @apply.student%></td>
        <td><%= @apply.job.company.compName if @apply.job.company.compName %></td>
        <td><%=@apply.job.name%></td>
        <td><%= @apply.job.package if @apply.student%></td>
        <td><%= @apply.job.location if @apply.student%></td>
        <td><%= @apply.job.critria if @apply.student%></td>
        <%if logged_in1?%>
        <td><%= link_to 'Show', @apply %></td>
        <td><%= link_to 'Edit', edit_apply_path(@apply) %></td>
        <%end%>
      </tr>
  </tbody>
</table>
<hr>
<div class="well">
  <div class="row">
     <div class="col-sm-12">
          <%if logged_in1?%>
         <div class="col-sm-3">
             <button type="button" class="btn btn-success btn-md"><%= link_to 'New Apply', new_apply_path, class: "btn btn-xs btn-primary" %></button>
         </div>
          <%end%>
         <div class="col-sm-3">
              <button type="button" class="btn btn-success btn-md"><%= link_to 'Edit', edit_apply_path(@apply) , class: "btn btn-xs btn-primary"%></button>
         </div>

     </div>

  </div>
</div>
</div>
</div>
</div>
