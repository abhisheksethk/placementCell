<div class="container-fluid "  >
    <div class="row"  > 
        <div class="col-sm-4"> </div> 
		<div class="col-sm-4" >
			<div class="jumbotron" style="margin-top: 30%">
				<%= form_for(:session, :html => {class: "form-horizontal", role: "form"}, url: login1_path) do |f| %>
				     <div class="panel panel-default">
                          <div class="panel-heading"><h4 align="center">Login</h4></div>
                      </div>
					
					<div class="form-group">	

                      <%= f.email_field :email, class: "form-control", placeholder: "Enter email", autofocus: true %>
					</div>
					
					<div class="form-group">
						<%= f.password_field :password, class: "form-control", autocomplete: "off" %>
					</div>
					<%= f.submit "Log in", class: 'btn btn-primary btn-md form-control'  %>
				<% end %>
			</div>
		</div>
		<div class="col-sm-4"> </div> 
		</div>
	</div>