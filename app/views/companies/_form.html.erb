<%= render 'shared/errors', obj: company %>

<div class=" form-width  row ">
  <div class="col-sm-10 col-md-offset-2">
    <%= form_for(company,:html =>{class:"form-horizontal",role:"form"}) do |f| %>
     <div class="form-group" style="padding-top: 40px">
          <div class="control-label col-sm-2">
          <%= f.label :compName ,"Company Name"%>
          </div>
           <div class="col-sm-5">
             <%= f.text_field :compName,placeholder:"Company Name",class:"form-control",autofocus:true %>
          </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
         <%= f.label :hrName ,"HR Name"%>
          </div>
           <div class="col-sm-5">
             <%= f.text_field :hrName,placeholder:"HR Name",class:"form-control",autofocus:true  %>
          </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
          <%= f.label :contactNumber ,"Contact Number"%>
          </div>
           <div class="col-sm-5">
             <%= f.telephone_field :contactNumber,placeholder:"Contact Number",class:"form-control",autofocus:true  %>
          </div>
      </div>
      <div class="form-group">
          <div class="control-label col-sm-2 text-nowrap">
          <%= f.label :compPostalAddress ,"Company Address"%>
          </div>
           <div class="col-sm-5">
             <%= f.text_area :compPostalAddress,rows: 6,placeholder:"Address",class:"form-control",autofocus:true  %>
          </div>     
       </div>
      <div class="form-group">
          <div class="control-label col-sm-2">
           <%= f.label :website,"Website URL" %>
          </div>
           <div class="col-sm-5">
             <%= f.text_field :website ,placeholder:"Website URL",class:"form-control",autofocus:true %>
          </div>
      </div>
       <div class="form-group">
          <div class="control-label col-sm-2">
           <%= f.label :email,"Email" %>
          </div>
           <div class="col-sm-5">
              <%= f.email_field :email ,placeholder:"Email",class:"form-control",autofocus:true %>
          </div>
      </div>
       <div class="form-group">
          <div class="control-label col-sm-2">
            <%= f.label :password %>
          </div>
           <div class="col-sm-5">
            <%= f.password_field :password, class: "form-control", placeholder: "password" %>
           
          </div>
      </div>
     <div class="form-group">
       <div class="col-sm-5 col-sm-offset-2">
         <%if (!logged_in2?)%>
          <%= f.submit "Sign up" , class:'btn btn-primary btn-md'%>
         <%else%>
          <%= f.submit "Update" , class:'btn btn-primary btn-md'%>
          <%end%>
          
       </div>
     </div>
   <% end %>
   </div>
   </div>
   
  

